{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "https"
  ],
  "swagger": "2.0",
  "info": {
    "title": "The Portal Messaging API.",
    "version": "0.0.1"
  },
  "host": "dev.portalmessaging.com",
  "basePath": "/v1",
  "paths": {
    "/login": {
      "post": {
        "summary": "User login via email and password.",
        "operationId": "login",
        "parameters": [
          {
            "name": "password_login",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/passwordLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/loginResponse"
          },
          "400": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      }
    },
    "/login/google": {
      "post": {
        "summary": "Login or register via a Google account.",
        "operationId": "googleLogin",
        "parameters": [
          {
            "name": "google_login",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/googleLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/loginResponse"
          },
          "400": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      }
    },
    "/register": {
      "post": {
        "schemes": [
          "https"
        ],
        "summary": "Register a user via email and password.",
        "operationId": "register",
        "parameters": [
          {
            "name": "password_registration",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/passwordRegistration"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/success"
          },
          "400": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      }
    },
    "/user/devices": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retrieve a user's existing connected devices.",
        "operationId": "getDevices",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/deviceList"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      },
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Register a new Google Cloud Messaging device.",
        "operationId": "addDevice",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          },
          {
            "name": "add_device",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/addDevice"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/addDevice"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      }
    },
    "/user/messages/history": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retrieve a user's latest messages (up to a limit).",
        "operationId": "messageHistory",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/messageHistoryResponse"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          },
          "default": {
            "$ref": "#/responses/detailError"
          }
        }
      }
    },
    "/user/messages/sync/{mid}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get all messages after a given message id.",
        "operationId": "messageSync",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "mid",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/messageHistoryResponse"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "404": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      }
    },
    "/user/messages/{mid}": {
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Deletes a given message.",
        "operationId": "messageDelete",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "mid",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/success"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "404": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      }
    },
    "/user/signout": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Sign out of a session.",
        "operationId": "signout",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          },
          {
            "name": "add_device",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/signout"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/success"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      }
    },
    "/verify/{token}": {
      "get": {
        "summary": "Consume a user email verification token.",
        "operationId": "verifyToken",
        "parameters": [
          {
            "type": "string",
            "name": "token",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/success"
          },
          "400": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      }
    },
    "/user/contacts": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retrieve user contacts.",
        "operationId": "getContacts",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/contactListResponse"
          },
          "400": {
            "$ref": "#/responses/error"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      },
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Upload user contacts.",
        "operationId": "addContacts",
        "parameters": [
          {
            "type": "string",
            "name": "X-USER-TOKEN",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "name": "X-USER-ID",
            "in": "header",
            "required": true
          },
          {
            "name": "contacts",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/contactList"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/success"
          },
          "401": {
            "$ref": "#/responses/error"
          },
          "500": {
            "$ref": "#/responses/error"
          }
        }
      }
    }
  },
  "definitions": {
    "addDevice": {
      "type": "object",
      "required": [
        "registration_id",
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "registration_id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "(phone,chrome,desktop)"
        }
      }
    },
    "addDeviceResponse": {
      "type": "object",
      "properties": {
        "device_id": {
          "type": "string"
        },
        "encryption_key": {
          "type": "string"
        },
        "notification_key": {
          "type": "string"
        }
      }
    },
    "detailError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      }
    },
    "deviceListResponse": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/linkedDevice"
          }
        }
      }
    },
    "errorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    },
    "googleLogin": {
      "type": "object",
      "required": [
        "id_token"
      ],
      "properties": {
        "id_token": {
          "type": "string"
        }
      }
    },
    "linkedDevice": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "updated_at": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "loginResponse": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "user_token": {
          "type": "string"
        }
      }
    },
    "messageBody": {
      "type": "object",
      "properties": {
        "at": {
          "type": "integer",
          "format": "int64"
        },
        "body": {
          "type": "string"
        },
        "mid": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "to": {
          "type": "string"
        }
      }
    },
    "messageHistory": {
      "type": "object",
      "properties": {
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/messageBody"
          }
        }
      }
    },
    "passwordLogin": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string",
          "maxLength": 50,
          "minLength": 6
        }
      }
    },
    "passwordRegistration": {
      "type": "object",
      "required": [
        "email",
        "password",
        "first_name",
        "last_name"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "first_name": {
          "type": "string",
          "maxLength": 20,
          "minLength": 1
        },
        "last_name": {
          "type": "string",
          "maxLength": 20,
          "minLength": 1
        },
        "password": {
          "type": "string",
          "maxLength": 50,
          "minLength": 6
        },
        "phone_number": {
          "type": "string",
          "pattern": "^\\+[0-9]{10,12}$"
        }
      }
    },
    "signout": {
      "type": "object",
      "required": [
        "device_id"
      ],
      "properties": {
        "device_id": {
          "type": "string"
        }
      }
    },
    "successResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        }
      }
    },
    "contactPhoneNumber": {
      "type": "object",
      "required": [
        "name",
        "number"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "number": {
          "type": "string"
        }
      }
    },
    "contactBody": {
      "type": "object",
      "required": [
        "name",
        "cid",
        "phone_numbers"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "cid": {
          "type": "string"
        },
        "phone_numbers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/contactPhoneNumber"
          }
        }
      }
    },
    "contactList": {
      "type": "object",
      "required": [
        "contacts"
      ],
      "properties": {
        "contacts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/contactBody"
          }
        }
      }
    }
  },
  "responses": {
    "addDevice": {
      "description": "AddDeviceResponse contains the encryption and\nnotifica†ion keys for a new GCM client.",
      "schema": {
        "$ref": "#/definitions/addDeviceResponse"
      }
    },
    "detailError": {
      "description": "A DetailError gives both the error and reason for the error.",
      "schema": {
        "$ref": "#/definitions/detailError"
      }
    },
    "deviceList": {
      "description": "DeviceListResponse contains existing, connected user devices.",
      "schema": {
        "$ref": "#/definitions/deviceListResponse"
      }
    },
    "error": {
      "description": "An ErrorResponse wraps a bad request with an error code string.",
      "schema": {
        "$ref": "#/definitions/errorResponse"
      }
    },
    "loginResponse": {
      "description": "A LoginResponse contains credentials to make authenticated requests.",
      "schema": {
        "$ref": "#/definitions/loginResponse"
      }
    },
    "messageHistoryResponse": {
      "description": "MessageHistoryReponse contains user messages.",
      "schema": {
        "$ref": "#/definitions/messageHistory"
      }
    },
    "contactListResponse": {
      "description": "ContactListResponse contains user contacts.",
      "schema": {
        "$ref": "#/definitions/contactList"
      }
    },
    "success": {
      "description": "A SuccessResponse denotes whether or not an action was successful.",
      "schema": {
        "$ref": "#/definitions/successResponse"
      }
    }
  }
}